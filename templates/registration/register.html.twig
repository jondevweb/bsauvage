{% extends 'base.html.twig' %}

{% block body2 %}
    <div class="container">
        <div id="brasseriePresent">
            <h2>Inscription</h2>
            <div class="text-center">
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.last_name) }}
                    {{ form_row(registrationForm.first_name) }}
                    {{ form_row(registrationForm.pseudo) }}
                    {{ form_row(registrationForm.adress) }}
                    {{ form_row(registrationForm.city) }}
                    {{ form_row(registrationForm.postalCode) }}
                    {{ form_row(registrationForm.phone) }}
                    {{ form_row(registrationForm.birthday_date) }}
                    {{ form_row(registrationForm.agreeTerms) }}
                    <input type="submit" class="submit" value="Valider">
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
